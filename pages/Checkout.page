                                                    <apex:commandButton action="{!nextAction}" status="paymentselectionprocessing" reRender="ddForm,header" styleClass="button button--primary"
                                                        value="{!$Label.Confirm_Payment_Button}" />
                                                </apex:facet>
                                            </apex:actionStatus>
                                        </div>

                                    </apex:outputPanel>
                                    <apex:outputPanel rendered="{!stepNo == 2}">
