                                                        />
                                                    </div>
                                                </div>

                                                <div class="form__inline--large-1-2 ddconfirmation" style="margin-bottom:15px;">
                                                    Payment start date:
                                                </div>
                                                <div class="form__inline--large-1-2 ddconfirmation" style="margin-bottom:15px;">
                                                    <div class="signupInput">
                                                        <apex:outputField styleClass="slds-input" value="{!dd.DD_Start_Date__c}" />
                                                    </div>
                                                </div>
