                                                        </label>

                                                    </div>
                                                    <apex:outputPanel rendered="{!$Label.Additional_Monthly_Description != '.' && wrapper.opp.Payment_Schedule__r.Frequency__c == 'Monthly'}">
                                                        <apex:outputText value="{!$Label.Additional_Monthly_Description}"/>
                                                        <br/><br/>
                                                    </apex:outputPanel> 
                                                </apex:repeat>

